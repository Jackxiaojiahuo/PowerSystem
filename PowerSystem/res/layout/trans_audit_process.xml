						android:layout_weight="1"
						android:id="@+id/r_handle_spinner1"
						android:layout_margin="0dp" />
				</LinearLayout>
				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView
						android:layout_height="40dp"
						style="@style/audit_process"
						android:text="处理日期:"
						android:textColor="#f00" />
					<EditText
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:focusable="false"
						android:id="@+id/r_handle_et3" />
				</LinearLayout>
				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView
						android:layout_height="40dp"
						style="@style/audit_process"
						android:text="遗留问题描述:"
						android:textColor="#f00" />
					<EditText
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:minLines="3"
						android:text="无"
						android:id="@+id/r_handle_et4" />
				</LinearLayout>
				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView
						android:layout_height="40dp"
						style="@style/audit_process"
						android:text="消缺单位:"
						android:textColor="#f00" />
					<EditText
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:focusable="false"
						android:id="@+id/r_handle_et5" />
				</LinearLayout>
				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView
						android:layout_height="fill_parent"
						style="@style/audit_process"
						android:text="消缺负责人:"
						android:textColor="#f00" />
					<EditText
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:focusable="false"
						android:id="@+id/r_handle_et6" />
				</LinearLayout>
				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView
						android:layout_height="fill_parent"
						style="@style/audit_process"
						android:text="概算费用 (元):"
						android:textColor="#f00" />
					<EditText
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:id="@+id/r_handle_et7" />
				</LinearLayout>
				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView
						android:layout_height="40dp"
						style="@style/audit_process"
						android:text="发生材料明细:"
						android:visibility="invisible"
						android:textColor="#f00" />
					<Button
						android:layout_width="wrap_content"
						android:layout_height="45dp"
						android:text="查看参考价格"
						android:layout_weight="1"
						android:background="#75CBE8"
						android:textSize="16dp"
						android:id="@+id/r_handle_btn2" />
				</LinearLayout>
				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView
						android:layout_height="40dp"
						style="@style/audit_process"
						android:text="是否同意流程处理:"
						android:textColor="#f00" />
					<Spinner
						android:layout_margin="0dp"
